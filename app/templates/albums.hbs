<div>
  <h2>List of Albums</h2>
  <div class="well well-sm">
    <form>
      <label for="name">Add an album:</label>
      {{input value=newAlbum}}
      <button {{action 'saveNew'}} class="btn btn-success btn-sm">Save</button>
    </form>
  </div>
  <ul>
    {{#each model as |album|}}
      <li>
        {{#if album.isEditing}}
          <div class="well well-sm">
          <form {{action 'saveEdit' album on='submit'}}>
            {{input value=album.name}}
            <button type='submit' class="btn btn-success btn-sm">Save</button>
            <button {{action 'cancel' album}} class="btn btn-danger btn-sm">Cancel</button>
          </form>
        </div>
        {{else}}
        <div>
          <p>{{album.name}}</p>
          <p>Songs:</p>
          <ul>
            {{#each album.songs as |song|}}
            <li>{{song.name}}</li>
            {{/each}}
          </ul>
          <button {{action 'edit' album}} class="btn btn-primary btn-sm">Edit</button>
          <button {{action 'delete' album}} class="btn btn-danger btn-sm">Delete</button>
        </div>
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>
{{outlet}}
